{
  "name": "athanor",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npx prisma generate && bash -c '(node scripts/build-bibliography.js && node scripts/validate-citations.js && node scripts/build-citation-map.js) & (node scripts/build-graph-billets.cjs && node scripts/render-graph-svg.cjs) & (node scripts/build-search-index.js); wait' && next build",
    "start": "next start",
    "lint": "next lint",
    "db:push": "dotenv-cli -e .env.local -- prisma db push",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate",
    "graph:build": "node scripts/build-graph-billets.cjs",
    "graph:svg": "node scripts/render-graph-svg.cjs",
    "test:build": "npm run build && node scripts/check-build.js",
    "db:dev:start": "docker-compose up -d",
    "db:dev:stop": "docker-compose down",
    "db:dev:reset": "npm run db:dev:stop && npm run db:dev:start && sleep 2 && npx prisma migrate dev --name init"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.3.4",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@next/mdx": "^15.4.6",
    "@octokit/rest": "^22.0.0",
    "@prisma/client": "^6.14.0",
    "@tailwindcss/typography": "^0.5.10",
    "@uiw/react-codemirror": "^4.25.1",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.0.1",
    "clsx": "^2.0.0",
    "font-measure": "^1.2.2",
    "fuse.js": "^7.0.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.539.0",
    "lunr": "^2.3.9",
    "next": "^15.4.6",
    "next-auth": "^4.24.5",
    "pdf-parse": "^1.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "react-pdf": "^10.0.1",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "tailwind-merge": "^2.2.0",
    "ts-node": "^10.9.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/lunr": "^2.3.7",
    "@types/node": "^20",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.0.1",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8",
    "eslint-config-next": "^15.4.6",
    "glob": "^11.0.3",
    "postcss": "^8",
    "prisma": "^6.14.0",
    "tailwindcss": "^3.3.0",
    "tsx": "^4.20.3",
    "typescript": "^5"
  }
}
